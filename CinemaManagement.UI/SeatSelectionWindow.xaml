<Window x:Class="CinemaManagement.UI.Views.SeatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Seats" Height="700" Width="900"
        WindowStartupLocation="CenterOwner" Background="#0d1117">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Header -->
            <TextBlock x:Name="HeaderText" 
                      FontSize="22" FontWeight="Bold" 
                      Foreground="White" Margin="0,0,0,10"/>

            <TextBlock x:Name="SubHeaderText" 
                      FontSize="14" 
                      Foreground="#8b949e" 
                      Margin="0,0,0,20"/>

            <!-- Screen -->
            <Border Background="#58a6ff" Height="40" 
                   CornerRadius="5" Margin="0,0,0,30">
                <TextBlock Text="🎬 SCREEN" Foreground="White" 
                          FontSize="16" FontWeight="Bold"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
            </Border>

            <!-- Seat Grid Container -->
            <ScrollViewer Height="400" VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto">
                <UniformGrid x:Name="SeatGrid" 
                            HorizontalAlignment="Center"/>
            </ScrollViewer>

            <!-- Legend -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       Margin="0,15,0,15">

                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <Border Width="20" Height="20" Background="#238636" 
                           Margin="0,0,5,0"/>
                    <TextBlock Text="Available" Foreground="LightGray" 
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <Border Width="20" Height="20" Background="#58a6ff" 
                           Margin="0,0,5,0"/>
                    <TextBlock Text="Selected" Foreground="LightGray" 
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <Border Width="20" Height="20" Background="#991b1b" 
                           Margin="0,0,5,0"/>
                    <TextBlock Text="Booked" Foreground="LightGray" 
                              VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Selected Seats Display -->
            <TextBlock x:Name="SelectedSeatsLabel" 
                      Text="Selected Seats: None"
                      FontSize="14" Foreground="White" 
                      Margin="0,0,0,10"/>

            <TextBlock x:Name="TotalLabel" 
                      Text="Total: $0.00"
                      FontSize="16" FontWeight="Bold" 
                      Foreground="#58a6ff" 
                      Margin="0,0,0,20"/>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BookButton" 
                       Content="🎫 Confirm Booking"
                       Click="BookButton_Click"
                       Width="150" Padding="15,10" 
                       Margin="0,0,10,0"
                       Background="#238636" 
                       Foreground="White" 
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="6" 
                                   Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Cancel" 
                       Click="CancelButton_Click"
                       Width="100" Padding="15,10"
                       Background="#475569" 
                       Foreground="White" 
                       BorderThickness="0"
                       Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                   CornerRadius="6" 
                                   Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Window>