<Window x:Class="CinemaManagement.UI.Views.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cinema Management - Administrator"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#0d1117">

    <Window.Resources>
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="#21262d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                               CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#30363d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#161b22" Padding="20">
            <StackPanel>
                <TextBlock Text="ADMIN PANEL" FontSize="20" FontWeight="Bold" 
                          Foreground="#58a6ff" Margin="0,0,0,10"/>
                <TextBlock x:Name="WelcomeText" Text="Welcome, Admin" 
                          Foreground="#8b949e" Margin="0,0,0,30"/>

                <Button Content="📽️ Manage Movies" Click="ManageMovies_Click" 
                       Style="{StaticResource SidebarButton}" Margin="0,0,0,10"/>
                <Button Content="🎭 Manage Halls" Click="ManageHalls_Click"
                       Style="{StaticResource SidebarButton}" Margin="0,0,0,10"/>
                <Button Content="🎬 Manage Screenings" Click="ManageScreenings_Click"
                       Style="{StaticResource SidebarButton}" Margin="0,0,0,10"/>
                <Button Content="📊 View Reports" Click="ViewReports_Click"
                       Style="{StaticResource SidebarButton}" Margin="0,0,0,30"/>
                <Button Content="🚪 Logout" Click="Logout_Click"
                       Style="{StaticResource SidebarButton}" Background="#991b1b"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" x:Name="MainContent" Background="#0d1117">
            <!-- Dashboard Home -->
            <Border x:Name="DashboardPanel" Padding="30">
                <StackPanel>
                    <TextBlock Text="Dashboard Overview" FontSize="28" FontWeight="Bold" 
                              Foreground="White" Margin="0,0,0,30"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Stats Cards -->
                        <Border Grid.Column="0" Background="#161b22" CornerRadius="8" 
                               Padding="20" Margin="0,0,10,0">
                            <StackPanel>
                                <TextBlock Text="Active Movies" Foreground="#8b949e" FontSize="14"/>
                                <TextBlock x:Name="ActiveMoviesCount" Text="0" 
                                          Foreground="#58a6ff" FontSize="36" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Background="#161b22" CornerRadius="8" 
                               Padding="20" Margin="5,0,5,0">
                            <StackPanel>
                                <TextBlock Text="Total Halls" Foreground="#8b949e" FontSize="14"/>
                                <TextBlock x:Name="TotalHallsCount" Text="0" 
                                          Foreground="#58a6ff" FontSize="36" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="2" Background="#161b22" CornerRadius="8" 
                               Padding="20" Margin="10,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Upcoming Shows" Foreground="#8b949e" FontSize="14"/>
                                <TextBlock x:Name="UpcomingScreeningsCount" Text="0" 
                                          Foreground="#58a6ff" FontSize="36" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>