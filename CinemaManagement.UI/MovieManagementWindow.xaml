<Window x:Class="CinemaManagement.UI.Views.MovieManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movie Management" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#0d1117">

    <Window.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#238636"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" 
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Movie Management" FontSize="24" 
                  FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

        <!-- Movies List -->
        <DataGrid Grid.Row="1" x:Name="MoviesDataGrid" AutoGenerateColumns="False"
                 Background="#161b22" Foreground="White" BorderThickness="0"
                 RowBackground="#21262d" AlternatingRowBackground="#161b22"
                 GridLinesVisibility="None" HeadersVisibility="Column"
                 SelectionMode="Single" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Genre" Binding="{Binding Genre}" Width="120"/>
                <DataGridTextColumn Header="Duration (min)" Binding="{Binding DurationMinutes}" Width="120"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="80"/>
                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0">
            <Button Content="➕ Add Movie" Click="AddMovie_Click" 
                   Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
            <Button Content="✏️ Edit Movie" Click="EditMovie_Click"
                   Style="{StaticResource ActionButton}" Margin="0,0,10,0"/>
            <Button Content="🚫 Retire Movie" Click="RetireMovie_Click"
                   Style="{StaticResource ActionButton}" Background="#991b1b" Margin="0,0,10,0"/>
            <Button Content="✅ Activate Movie" Click="ActivateMovie_Click"
                   Style="{StaticResource ActionButton}" Background="#166534" Margin="0,0,10,0"/>
            <Button Content="🔄 Refresh" Click="Refresh_Click"
                   Style="{StaticResource ActionButton}"/>
        </StackPanel>
    </Grid>
</Window>